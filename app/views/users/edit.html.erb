<% @page_title="Edit User" %>

<%= form_for(@user, :url => {:action => "update", :id => @user.id}) do |f| %>

  <%= render partial: "form", locals: {:user => @user, :f => f} %>

  <div class="row">
    <div class="col">
      <%= f.submit "Submit Changes", class: "btn blue-grey white-text", type: "submit" %>
    </div>
  </div>

<% end %>
