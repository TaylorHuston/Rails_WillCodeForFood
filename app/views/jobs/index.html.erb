<div id="container" class="container">
  <div class="row">
    <div id="leftSidebar" class="col-xs-3">
      <h1>Will Code For Food</h1>

      <p>Coding jobs for 
        <ul>
          <li>CS Students</li>
          <li>Bootcamp Alumni</li>
          <li>Self Taugh Developers</li>
        </ul>
      No experience required.<br />
      Free to Post.<br />
      Free to Search.</p>
      <p><%= link_to "Click Here To Add A Job", new_job_path %></p>
    </div>

    <div id="rightSidebar" class="col-xs-9">
    <% @jobs.each do |job| %>
      <div class="job">
        <p><h2><%= link_to job.title, job.url %></h2>
        <% if job.category == 1 %>
            Job
          <% else %>
            Internship
          <% end %> - <%= job.created_at.to_date %></p>
        <p><%= job.company %><br />
           <%= link_to "Apply Here", job.url, class: 'btn btn-success' %></p>
      </div>
      <p><%= paginate @jobs %></p>

      <% end %>
    </div>
  </div>
</div>