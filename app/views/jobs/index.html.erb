<div id="container" class="container">
  <div class="row">
    <div id="leftSidebar" class="col s5">
      <h2>Will Code For Food</h2>

      <p>Coding jobs for 
        <ul>
          <li>CS Students</li>
          <li>Bootcamp Alumni</li>
          <li>Self Taugh Developers</li>
        </ul>
      No experience required.<br />
      Free to Post.<br />
      Free to Search.</p>
      <p><%= link_to "Click Here To Add A Job", new_job_path %></p>
    </div>

    <div id="rightSidebar" class="col s7">
    <% @jobs.each do |job| %>
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= link_to job.title, job.url, class: "blue-text lighten-5" %></span><br />
          <% if job.category == 1 %>
            Job
          <% else %>
            Internship
          <% end %> - <%= job.created_at.to_date %><br />
          <%= job.company %>
        </div>
        <div class="card-action">
           <%= link_to "Apply Here", job.url, class: "waves-green btn-flat" %>
        </div>
      </div>
      <p><%= paginate @jobs %></p>

      <% end %>
    </div>
  </div>
</div>