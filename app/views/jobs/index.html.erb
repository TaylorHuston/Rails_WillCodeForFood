<div id="container">
<div id="leftSidebar">
  <h1>Will Code For Food</h1>
  
  <p>Coding jobs for 
    <ul>
      <li>CS Students</li>
      <li>Bootcamp Alumni</li>
      <li>Self Taugh Developers</li>
    </ul>
  No experience required.<br />
  Free to Post.<br />
  Free to Search.</p>
  <p><%= link_to "Click Here To Add A Job", new_job_path %></p>
</div>

<div id="rightSidebar">
<% @jobs.each do |job| %>
  <div class="job">
    <h2><%= link_to job.title, job.url %></h2>
    <p><% if job.category == 1%>
        Job
      <% else %>
        Internship
      <% end %></p>
    <p><%= job.company %></p>
    <p><%= job.created_at.to_date %></p>
  </div>
<p><%= paginate @jobs %></p>
<% end %>
</div>
</div>